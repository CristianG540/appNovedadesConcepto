<form action="/tweet/create" method="POST" role="form" style="width: 100%;">
    <div class="form-group">
        <textarea class="form-control" name="content" maxlength="140" id="tweet-content" placeholder="Crear nueva novedad..."></textarea>
    </div>
    <div class="form-group">
        <label class="radio-inline">
            <input type="radio" name="priority" value=1>Alta
        </label>
        <label class="radio-inline">
            <input type="radio" name="priority" value=2>Media
        </label>
        <label class="radio-inline">
            <input type="radio" name="priority" value=3>Baja
        </label>
    </div>
    <button type="submit" class="btn btn-primary btn-default">Postear</button>
    <span id="tweet-location">
        <button type="button" data-loading-text="Loading..." id="get-tweet-location" class="btn btn-primary">
          Ubicacion
        </button>
    </span>
    <input type="hidden" name="_csrf" value="<%= _csrf %>">
</form>
